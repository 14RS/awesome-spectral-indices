{"NDVI": {"long_name": "Normalized Difference Vegetation Index", "formula": "(N - R)/(N + R)", "bands": ["N", "R"], "reference": "https://www.indexdatabase.de/db/i-single.php?id=58", "type": "vegetation", "date_of_addition": "2021-04-07"}, "BNDVI": {"long_name": "Blue Normalized Difference Vegetation Index", "formula": "(N - B)/(N + B)", "bands": ["N", "B"], "reference": "https://www.indexdatabase.de/db/i-single.php?id=135", "type": "vegetation", "date_of_addition": "2021-04-07"}, "CIG": {"long_name": "Chlorophyll Index Green", "formula": "(N / G) - 1.0", "bands": ["N", "G"], "reference": "https://www.indexdatabase.de/db/i-single.php?id=128", "type": "vegetation", "date_of_addition": "2021-04-07"}, "CVI": {"long_name": "Chlorophyll Vegetation Index", "formula": "(N * R) / (G ** 2.0)", "bands": ["N", "G", "R"], "reference": "https://www.indexdatabase.de/db/i-single.php?id=391", "type": "vegetation", "date_of_addition": "2021-04-07"}, "EVI": {"long_name": "Enhanced Vegetation Index", "formula": "g * (N - R) / (N + C1 * R - C2 * B + L)", "bands": ["N", "g", "R", "C1", "C2", "B", "L"], "reference": "https://www.indexdatabase.de/db/i-single.php?id=16", "type": "vegetation", "date_of_addition": "2021-04-07"}, "EVI2": {"long_name": "Two-Band Enhanced Vegetation Index", "formula": "g * (N - R) / (N + 2.4 * R + L)", "bands": ["N", "g", "R", "L"], "reference": "https://doi.org/10.1016/j.rse.2008.06.006", "type": "vegetation", "date_of_addition": "2021-04-07"}, "GARI": {"long_name": "Green Atmospherically Resistant Vegetation Index", "formula": "(N - (G - (B - R))) / (N - (G + (B - R)))", "bands": ["N", "G", "R", "B"], "reference": "https://www.indexdatabase.de/db/i-single.php?id=363", "type": "vegetation", "date_of_addition": "2021-04-07"}, "GEMI": {"long_name": "Global Environment Monitoring Index", "formula": "((2.0*((N ** 2.0)-(R ** 2.0)) + 1.5*N + 0.5*R)/(N + R + 0.5))*(1.0 - 0.25*((2.0 * ((N ** 2.0) - (R ** 2)) + 1.5 * N + 0.5 * R)/(N + R + 0.5)))-((R - 0.125)/(1 - R))", "bands": ["N", "R"], "reference": "https://www.indexdatabase.de/db/i-single.php?id=25", "type": "vegetation", "date_of_addition": "2021-04-07"}, "GBNDVI": {"long_name": "Green-Blue Normalized Difference Vegetation Index", "formula": "(N - (G + B))/(N + (G + B))", "bands": ["N", "G", "B"], "reference": "https://www.indexdatabase.de/db/i-single.php?id=186", "type": "vegetation", "date_of_addition": "2021-04-07"}, "GLI": {"long_name": "Green Leaf Index", "formula": "(2.0 * G - R - B) / (2.0 * G + R + B)", "bands": ["R", "G", "B"], "reference": "https://www.indexdatabase.de/db/i-single.php?id=375", "type": "vegetation", "date_of_addition": "2021-04-07"}, "GNDVI": {"long_name": "Green Normalized Difference Vegetation Index", "formula": "(N - G)/(N + G)", "bands": ["N", "G"], "reference": "https://www.indexdatabase.de/db/i-single.php?id=401", "type": "vegetation", "date_of_addition": "2021-04-07"}, "GRNDVI": {"long_name": "Green-Red Normalized Difference Vegetation Index", "formula": "(N - (G + R))/(N + (G + R))", "bands": ["R", "G", "N"], "reference": "https://www.indexdatabase.de/db/i-single.php?id=185", "type": "vegetation", "date_of_addition": "2021-04-07"}, "GVMI": {"long_name": "Global Vegetation Moisture Index", "formula": "((N + 0.1) - (S2 + 0.02)) / ((N + 0.1) + (S2 + 0.02))", "bands": ["S2", "N"], "reference": "https://www.indexdatabase.de/db/i-single.php?id=372", "type": "vegetation", "date_of_addition": "2021-04-07"}, "MNDVI": {"long_name": "Modified Normalized Difference Vegetation Index", "formula": "(N - S2)/(N + S2)", "bands": ["S2", "N"], "reference": "https://www.indexdatabase.de/db/i-single.php?id=245", "type": "vegetation", "date_of_addition": "2021-04-07"}, "NGRDI": {"long_name": "Normalized Green Red Difference Index", "formula": "(G - R) / (G + R)", "bands": ["G", "R"], "reference": "https://www.indexdatabase.de/db/i-single.php?id=390", "type": "vegetation", "date_of_addition": "2021-04-07"}, "RVI": {"long_name": "Ratio Vegetation Index", "formula": "N / R", "bands": ["N", "R"], "reference": "https://www.indexdatabase.de/db/i-single.php?id=72", "type": "vegetation", "date_of_addition": "2021-04-07"}, "SAVI": {"long_name": "Soil-Adjusted Vegetation Index", "formula": "(1.0 + L) * (N - R) / (N + R + L)", "bands": ["N", "R", "L"], "reference": "https://www.indexdatabase.de/db/i-single.php?id=87", "type": "vegetation", "date_of_addition": "2021-04-07"}, "VARI": {"long_name": "Visible Atmospherically Resistant Index", "formula": "(G - R) / (G + R - B)", "bands": ["B", "R", "G"], "reference": "https://www.indexdatabase.de/db/i-single.php?id=356", "type": "vegetation", "date_of_addition": "2021-04-07"}, "BAI": {"long_name": "Burned Area Index", "formula": "1.0 / ((0.1 - R) ** 2.0 + (0.06 - N) ** 2.0)", "bands": ["N", "R"], "reference": "https://digital.csic.es/bitstream/10261/6426/1/Martin_Isabel_Serie_Geografica.pdf", "type": "burn", "date_of_addition": "2021-04-07"}, "BAIS2": {"long_name": "Burned Area Index for Sentinel 2", "formula": "(1.0 - ((RE2 * RE3 * RE4) / R) ** 0.5) * (((S2 - RE4)/(S2 + RE4) ** 0.5) + 1.0)", "bands": ["RE2", "RE3", "RE4", "R", "S2"], "reference": "https://doi.org/10.3390/ecrs-2-05177", "type": "burn", "date_of_addition": "2021-04-07"}, "CSIT": {"long_name": "Char Soil Index Thermal", "formula": "N / (S2 * T1 / 10000.0)", "bands": ["N", "S2", "T1"], "reference": "https://doi.org/10.1080/01431160600954704", "type": "burn", "date_of_addition": "2021-04-07"}, "NBR": {"long_name": "Normalized Burn Ratio", "formula": "(N - S2) / (N + S2)", "bands": ["N", "S2"], "reference": "https://www.indexdatabase.de/db/i-single.php?id=53", "type": "burn", "date_of_addition": "2021-04-07"}, "NBRT": {"long_name": "Normalized Burn Ratio Thermal", "formula": "(N - (S2 * T1 / 10000.0)) / (N + (S2 * T1 / 10000.0))", "bands": ["N", "S2", "T1"], "reference": "https://doi.org/10.1080/01431160500239008", "type": "burn", "date_of_addition": "2021-04-07"}, "NDVIT": {"long_name": "Normalized Difference Vegetation Index Thermal", "formula": "(N - (R * T1 / 10000.0))/(N + (R * T1 / 10000.0))", "bands": ["N", "R", "T1"], "reference": "https://doi.org/10.1080/01431160600954704", "type": "burn", "date_of_addition": "2021-04-07"}, "SAVIT": {"long_name": "Soil-Adjusted Vegetation Index Thermal", "formula": "(1.0 + L) * (N - (R * T1 / 10000.0)) / (N + (R * T1 / 10000.0) + L)", "bands": ["N", "R", "T1", "L"], "reference": "https://doi.org/10.1080/01431160600954704", "type": "burn", "date_of_addition": "2021-04-07"}, "MNDWI": {"long_name": "Modified Normalized Difference Water Index", "formula": "(G - S1) / (G + S1)", "bands": ["G", "S1"], "reference": "https://doi.org/10.1080/01431160600589179", "type": "water", "date_of_addition": "2021-04-07"}, "NDWI": {"long_name": "Normalized Difference Water Index", "formula": "(G - N) / (G + N)", "bands": ["G", "N"], "reference": "https://doi.org/10.1080/01431169608948714", "type": "water", "date_of_addition": "2021-04-07"}, "NDSI": {"long_name": "Normalized Difference Snow Index", "formula": "(G - S1) / (G + S1)", "bands": ["G", "S1"], "reference": "https://doi.org/10.1109/IGARSS.1994.399618", "type": "snow", "date_of_addition": "2021-04-07"}, "NDDI": {"long_name": "Normalized Difference Drought Index", "formula": "(((N - R)/(N + R)) - ((G - N)/(G + N)))/(((N - R)/(N + R)) + ((G - N)/(G + N)))", "bands": ["G", "N", "R"], "reference": "https://doi.org/10.1029/2006GL029127", "type": "drought", "date_of_addition": "2021-04-07"}, "kEVI": {"long_name": "Kernel Enhanced Vegetation Index", "formula": "g * (kNN - kNR) / (kNN + C1 * kNR - C2 * kNB + kNL)", "bands": ["kNN", "g", "kNR", "C1", "C2", "kNB", "kNL"], "reference": "https://doi.org/10.1126/sciadv.abc7447", "type": "kernel", "date_of_addition": "2021-04-07"}, "kNDVI": {"long_name": "Kernel Normalized Difference Vegetation Index", "formula": "(kNN - kNR)/(kNN + kNR)", "bands": ["kNN", "kNR"], "reference": "https://doi.org/10.1126/sciadv.abc7447", "type": "kernel", "date_of_addition": "2021-04-07"}, "kRVI": {"long_name": "Kernel Ratio Vegetation Index", "formula": "kNN / kNR", "bands": ["kNN", "kNR"], "reference": "https://doi.org/10.1126/sciadv.abc7447", "type": "kernel", "date_of_addition": "2021-04-07"}, "kVARI": {"long_name": "Kernel Visible Atmospherically Resistant Index", "formula": "(kGG - kGR) / (kGG + kGR - kGB)", "bands": ["kGG", "kGR", "kGB"], "reference": "https://doi.org/10.1126/sciadv.abc7447", "type": "kernel", "date_of_addition": "2021-04-07"}, "SeLI": {"long_name": "Sentinel-2 LAI Green Index", "formula": "(RE4 - RE1) / (RE4 + RE1)", "bands": ["RE4", "RE1"], "reference": "https://doi.org/10.3390/s19040904", "type": "vegetation", "date_of_addition": "2021-04-08"}}